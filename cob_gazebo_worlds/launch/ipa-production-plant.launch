<?xml version="1.0"?>
<launch>
	<arg name="debug" default="false"/>
	<arg name="headless" default="false"/>
	<arg name="paused" default="false"/>
	<arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="throttled" default="false"/>

	<arg name="robot_env" default="ipa-production-plant"/>

	<!-- start gazebo with empty world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="worlds/empty.world"/>
		<arg name="debug" value="$(arg debug)" />
		<arg name="headless" value="$(arg headless)"/>
		<arg name="paused" value="$(arg paused)" />
		<arg name="use_sim_time" value="$(arg use_sim_time)" />
		<arg name="gui" value="$(arg gui)" />
		<!--arg name="throttled" value="$(arg throttled)" /-->
	</include>

	<include file="$(find cob_gazebo_worlds)/launch/world_urdf.launch">
		<arg name="robot_env" value="$(arg robot_env)"/>
		<arg name="publish_world_state" value="false"/>
	</include>

	<!-- send objects locations to parameter server -->
	<include file="$(find cob_default_env_config)/upload_object_locations.launch">
		<arg name="robot_env" value="$(arg robot_env)" />
	</include>

	<!-- spawn all objects -->
	<node name="spawn_object" pkg="cob_bringup_sim" type="spawn_object.py" args="all" output="screen"/>

	<node name="moving_object_r2d2" pkg="cob_bringup_sim" type="move_object.py" args="--mode=polygon --name=moving_object --velocity=0.8 --polygon='[[6.5,7.5],[19.5,7.5],[19.5,-8],[6.5,-8]]'" output="screen"/>

</launch>
